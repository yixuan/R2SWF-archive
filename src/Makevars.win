PKG_CPPFLAGS = -DLIBXML_STATIC -DLIBXSLT_STATIC -DLIBEXSLT_STATIC

ifeq "${R_ARCH}" "/x64"
PKG_CPPFLAGS += -I. -I./win64/include $(R_XTRA_CPPFLAGS)
PKG_LIBS = -L./win64/lib -lxslt -lexslt -lxml2 -lfreetype -lpng -L"$(R_HOME)/$(IMPDIR)" $(ZLIB_LIBS)
else
PKG_CPPFLAGS += -I. -I./win32/include $(R_XTRA_CPPFLAGS)
PKG_LIBS = -L./win32/lib -lxslt -lexslt -lxml2 -lfreetype -lpng -L"$(R_HOME)/$(IMPDIR)" $(ZLIB_LIBS)
endif

